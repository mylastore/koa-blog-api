{
  "name": "koa-api",
  "version": "2.0.0",
  "description": "An API boilerplate using Koa as the backend and Svelte as the frontend.",
  "author": "Oscar Quinteros",
  "private": false,
  "scripts": {
    "start": "NODE_ENV=development nodemon app.js --exec",
    "test": "NODE_ENV=testing jest --forceExit",
    "build": "NODE_ENV=production babel src -d build && npm run pretty",
    "pretty": "prettier --write --print-width 80 --single-quote --trailing-comma es5 --tab-width 4 --no-semi 'src/**/*.js' 'tests/**/*.js'",
    "production": "NODE_ENV=production pm2 start ecosystem.json",
    "clean": "npm cache clean --force",
    "seed": "node -r esm src/seed/seed.js"
  },
  "license": "MIT",
  "homepage": "https://github.com/mylastore/koa-api",
  "dependencies": {
    "@babel/polyfill": "^7.12.1",
    "@sendgrid/mail": "^7.3.0",
    "bcrypt": "^5.0.0",
    "dotenv": "^6.0.0",
    "esm": "^3.2.25",
    "express-session": "^1.17.0",
    "faker": "^4.1.0",
    "formidable": "^1.2.2",
    "google-auth-library": "^6.1.3",
    "ioredis": "^3.2.2",
    "jsonwebtoken": "^8.2.2",
    "kcors": "^2.2.1",
    "koa": "^2.13.0",
    "koa-body": "^4.2.0",
    "koa-helmet": "^5.2.0",
    "koa-json-error": "^3.1.2",
    "koa-qs": "^3.0.0",
    "koa-ratelimit": "^4.1.1",
    "koa-router": "^7.4.0",
    "koa-static": "^5.0.0",
    "koa-useragent": "^1.1.0",
    "log4js": "^6.3.0",
    "mongoose": "^5.12.11",
    "mongoose-unique-validator": "^2.0.3",
    "nanoid": "^3.1.23",
    "node-fetch": "^2.6.1",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "randexp": "^0.4.9",
    "sharp": "^0.28.3",
    "shortid": "^2.2.15",
    "slugify": "^1.4.5",
    "string-strip-html": "^6.0.4"
  },
  "devDependencies": {
    "@babel/cli": "^7.14.3",
    "@babel/core": "^7.14.3",
    "@babel/preset-env": "^7.14.4",
    "@babel/register": "^7.13.16",
    "jest": "^26.4.0",
    "nodemon": "^2.0.7",
    "prettier": "^1.19.1"
  },
  "keywords": [
    "koa",
    "koa2",
    "sharp",
    "api",
    "boilerplate",
    "api",
    "backend",
    "jwt",
    "pm2",
    "mongodb",
    "mongoose"
  ],
  "jest": {
    "testEnvironment": "node"
  }
}
